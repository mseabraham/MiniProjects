<Window x:Class="MidTrainingProj.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MidTrainingProj"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="300" FontSize="15" Background="Crimson">
    <Border CornerRadius="25"  Background="AntiqueWhite" Margin=" 20" >
        <StackPanel Margin=" 20">
            <Label Content="LOGIN" Foreground="Black" FontSize="25" HorizontalAlignment="Center" FontWeight="Bold" />
            <Separator Margin="20"/>
            <Label Content="Username"/>
            <TextBox x:Name="txtUsername" FontSize="15"/>
            <Label Content="Password"/>
            <PasswordBox x:Name="txtPassword" FontSize="15" />
            <Button x:Name="btnLogin" Content="LOGIN" Margin="0,30" />
            <Button x:Name="btnRegister" Content="REGISTER" />
        </StackPanel>
    </Border>

</Window>
